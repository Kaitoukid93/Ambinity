                                    <Slider TickFrequency="5" Width="100"  VerticalAlignment="Center" Margin="5,0,5,0" Orientation="Horizontal" Minimum="1" Maximum="100" Value="{Binding Card.WhitebalanceBlue}" />
                              
                                </StackPanel>
                            </Border>
                            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Grid.Row="3">
                                <TextBlock Style="{StaticResource tbHeading4Style}" VerticalAlignment="Center">Spot width</TextBlock>
