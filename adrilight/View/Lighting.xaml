                <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                    <!--sang theo man hinh-->
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel" >
                                <Setter Property="Height" Value="0"></Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=cboMode,Path=SelectedIndex}" Value="0">
                                        <Setter Property="Height" Value="Auto"></Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="360"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition MinHeight="40"/>
                                <RowDefinition  MinHeight="40"/>
                                <RowDefinition  MinHeight="40"/>
                                <RowDefinition  MinHeight="40"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0">
                                <TextBlock   Style="{StaticResource tbHeading4Style}">Source</TextBlock>
                            </Border>
                            <Border Grid.Column="1" Grid.Row="0">
                                <ComboBox Width="217" Height="37" HorizontalAlignment="Right" SelectedIndex="{Binding Card.CaptureSource}"  ItemsSource="{Binding AvailableDisplays}" IsSynchronizedWithCurrentItem="True" IsEditable="False"></ComboBox>
                            </Border>
                            <Border Grid.Row="1">
                                <TextBlock   Style="{StaticResource tbHeading4Style}">Linear Lighting</TextBlock>
                            </Border>
                            <Border Grid.Column="1" Grid.Row="1">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
