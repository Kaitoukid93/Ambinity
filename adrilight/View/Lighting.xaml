                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource tbHeading4Style}">R</TextBlock>
                                    <Slider TickFrequency="5" Width="100"  VerticalAlignment="Center" Margin="5,0,5,0" Orientation="Horizontal" Minimum="1" Maximum="100" Value="{Binding Card.WhitebalanceRed}" />
