                    </StackPanel>
                   <!--sang theo dai mau-->
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel" >
                                <Setter Property="Height" Value="0"></Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=cboMode,Path=SelectedIndex}" Value="1">
