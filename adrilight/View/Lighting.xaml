                                <TextBlock Style="{StaticResource tbHeading4Style}" VerticalAlignment="Center">Spot height</TextBlock>
                                <TextBox Text="{Binding Card.SpotHeight}" Width="40" VerticalContentAlignment="Center"></TextBox>
                                <TextBlock Style="{StaticResource tbHeading4Style}" VerticalAlignment="Center">Space X</TextBlock>
                                <TextBox  Width="40" VerticalContentAlignment="Center"></TextBox>
                                <TextBlock Style="{StaticResource tbHeading4Style}" VerticalAlignment="Center">Space Y</TextBlock>
