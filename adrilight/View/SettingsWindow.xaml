<Window x:Class="adrilight.ui.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:adrilight.ui"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"

        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="White"
        FontFamily="{StaticResource MaterialDesignFont}"
            d:DataContext="{Binding Source={StaticResource Locator}, Path=SettingsViewModel}"
        DataContext="{Binding Source={StaticResource Locator}, Path=SettingsViewModel}" 
		WindowStartupLocation="CenterScreen" MinWidth="1000" MinHeight="400" 
        Closed="Window_Closed" Width="1240" Height="600">

	<DockPanel LastChildFill="True" Margin="0,0,0,1">

		<DockPanel Background="{DynamicResource MaterialDesignCardBackground}" Width="165" LastChildFill="True" DockPanel.Dock="Left" materialDesign:ShadowAssist.ShadowDepth="Depth2" Margin="0,0,0,10">
			<Button Click="AddProduct"
                DockPanel.Dock="Bottom"
				Style="{StaticResource MaterialDesignRaisedButton}"
				ToolTip="Thêm bớt các sản phẩm của bạn" Height="36" Margin="8,0,0,0" HorizontalAlignment="Left" Width="152">

				<StackPanel Orientation="Horizontal" Width="156" Margin="-10,0,0,0">
					<TextBlock Text="Thêm sản phẩm" VerticalAlignment="Center" Width="100" Margin="0,0,0,0"/>
					<Image Source="Images/imgplus.jpg" Width="27" Height="27" Margin="5,-2,0,0"/>
				</StackPanel>
			</Button>
			<!--<ToggleButton
                DockPanel.Dock="Bottom"
  Style="{StaticResource MaterialDesignSwitchDarkToggleButton}"

  IsChecked="{Binding Settings.Advancesettings}" Height="49" RenderTransformOrigin="0.203,0.449" Margin="1,0,0,0" />-->

			<materialDesign:ColorZone 
                                            Mode="Light" DockPanel.Dock="Top">
				<DockPanel Background="White">
					<Image RenderOptions.BitmapScalingMode="HighQuality" DockPanel.Dock="Top" Margin="14,15,16,0" Height="51" VerticalAlignment="Top">

						<Image.Source>
							<ImageSource>Images/purple theme/app logo@2x.png</ImageSource>
						</Image.Source>
					</Image>
				</DockPanel>


			</materialDesign:ColorZone>
			<ListBox x:Name="DemoItemsListBox" Margin="0,0,0,61" 
                             ItemsSource="{Binding SelectableViewParts}"
                             SelectedItem="{Binding SelectedViewPart}" SelectionChanged="DemoItemsListBox_SelectionChanged"   
                             Background="White" Width="189">

				<ListBox.ItemTemplate>
					<DataTemplate DataType="domain:DemoItem">
						<TextBlock Text="{Binding ViewPartName}" Margin="4 0 30 0" RenderTransformOrigin="0.304,0.5" />
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>

		</DockPanel>


		<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch">

			<ContentPresenter Content="{Binding SelectedViewPart.Content}" Height="885" OpacityMask="White" Width="1172" />
		</ScrollViewer>
	</DockPanel>
</Window>
